{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "spec": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "destination": {
            "type": "string",
            "minLength": 1
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "anyOf": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "allOf": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false,
              "minProperties": 1
            }
          }
        },
        "minProperties": 1,
        "additionalProperties": false
      }
    },
    "required": [
      "name",
      "description",
      "spec"
    ],
    "additionalProperties": false
  }
}
