{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "spec": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "destination": {
            "type": "string"
          },
          "tags": {
            "type": "object",
            "properties": {
              "anyOf": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "allOf": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "pattern": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "oneOf": [
              {
                "required": [
                  "anyOf"
                ]
              },
              {
                "required": [
                  "allOf"
                ]
              },
              {
                "required": [
                  "pattern"
                ]
              }
            ]
          }
        },
        "minProperties": 1,
        "additionalProperties": false
      }
    },
    "required": [
      "name",
      "description",
      "spec"
    ],
    "additionalProperties": false
  }
}
