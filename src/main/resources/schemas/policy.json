{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "from": {
        "type": "string",
        "minLength": 1
      },
      "tags": {
        "type": "object",
        "additionalProperties": {}
      },
      "destination": {
        "type": "string",
        "minLength": 1
      },
      "resource": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "oneOf": [
            {
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            {
              "properties": {
                "tags": {
                  "type": "object",
                  "additionalProperties": {}
                }
              }
            }
          ]
        }
      }
    },
    "required": [
      "resource"
    ],
    "anyOf": [
      {
        "required": [
          "from"
        ]
      },
      {
        "required": [
          "tags"
        ]
      },
      {
        "required": [
          "destination"
        ]
      }
    ]
  }
}
